#exec --no-startup-id xautolock -time 10 -locker blurlock
#exec_always --no-startup-id ff-theme-util
#exec_always --no-startup-id fix_xcursor

# Colors
set $bg-color            #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# Window colors
#                       Border              Background         Text                 Indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c $HOME/.config/i3/i3blocks.conf
	colors {
                background $bg-color
                separator #757575
                #                  border             background         text
                focused_workspace  $bg-color          $bg-color          $text-color
                inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
                urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
        }
}

# Hide/unhide i3status bar
bindsym $mod+comma bar mode toggle

# Lock screen with Mod+Shift+x
bindsym $mod+shift+x exec i3lock --color "$bg-color"

# Multimedia Keys on MacBook Pro
# Reference: https://askubuntu.com/questions/794403/media-keys-on-macbook-pro-and-i3
# ---
# Pulse Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%; exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%; exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
# Media Player Controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
# Screen brightness controls
bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'screen brightness up'"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'screen brightness down'"

# Set wallpaper (even when reloading i3 config)
# --bg-scale fits the file into the background without repeating it, cutting off
# stuff or using borders. The aspect ratio is not preserved, as opposed to
# --bg-fill.
exec_always --no-startup-id feh --bg-scale $HOME/Pictures/wallpaper.jpg

# Configure monitor(s)
exec_always --no-startup-id randr --output HDMI-2 --off --output HDMI-1 --off --output DP-1 --off --output eDP-1 --primary --mode 2560x1600 --pos 0x0 --rotate normal --output DP-2 --off

# Remap keys
exec_always xmodmap -e "clear lock"  # disable caps lock switch
exec_always xmodmap -e "keysym Caps_Lock = Escape"  # set caps_lock as escape, useful in vim

# Run compton on startup to handle transparency and fade effects
exec --no-startup-id compton -f

# Configure MBP 13" French keyboard
# Refer to https://faq.i3wm.org/question/5606/using-setxkbmap-to-disabple-capslock/ regarding "sleep 1; "
exec_always --no-startup-id "sleep 1; setxkbmap -layout fr -variant mac -model apple"
