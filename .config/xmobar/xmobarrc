Config {

    -- Appearance
    ---
    -- Name of the font to be used. Use the xft: prefix for XFT fonts.
      font = "xft:Mononoki Nerd Font:pixelsize=14:antialias=true:hinting=true"
    -- Haskell-style list of fonts to be used with the fn-template. Use the xft: prefix for XFT fonts.
    , additionalFonts = [ "xft:FontAwesome:pixelsize=14" ]
    -- Background color.
    , bgColor =  "#282A36"
    -- Default font color.
    , fgColor =  "#B45BCF"
    -- Transparency. 0 is transparent, 255 is opaque.
    , alpha = 220
    -- Position. One of Top, TopP, TopW, TopSize, Bottom, BottomP, BottomW, BottomSize or Static (with x, y, width and height).
    -- TopP and BottomP take 2 arguments: left padding and right padding.
    -- TopW and BottomW take 2 arguments: an alignment parameter (L for left, C for centered, R for Right) and an integer for the percentage width xmobar window will have in respect to the screen width.
    -- TopSize and BottomSize take 3 arguments: an alignment parameter, an integer for the percentage width, and an integer for the minimum pixel height that the xmobar window will have.
    , position = Top
   
    -- Layout
    ---
    -- Root folder where icons are stored. Use <icon=path/> to insert icons. Default is ".".
    , iconRoot = "/home/laurent/.config/xmobar/xpm/"
    -- Character used to separate commands from raw text in the output template. Default is '%'.
    , sepChar =  "%"
    -- A 2-character string for aligning text in the output template.
    -- The text before the first character will be aligned left.
    -- The text in between the 2 characters will be centered.
    -- The text after the second character will be aligned right.
    , alignSep = "}{"
    -- Output template (escape multi-line string literal with \ and then another \ where the string starts again)
    , template = "\
        \ \
        \<icon=haskell_20.xpm/>\
        \ <fc=#666666>|</fc> \
        \%UnsafeStdinReader%\
        \ }{ \
        \<fc=#b3afc2>%uname%</fc>\
        \ <fc=#666666>|</fc> \
        \<fc=#FFB86C>%cpu%</fc>\
        \ <fc=#666666>|</fc> \
        \<fc=#FF5555>%memory%</fc>\
        \ <fc=#666666>|</fc> \
        \<fc=#82AAFF>%disku%</fc>\
        \ <fc=#666666>|</fc> \
        \<fc=#c3e88d>%enp34s0%</fc>\
        \ <fc=#666666>|</fc> \
        \<fc=#e1acff>%count_upgradable_packages%</fc>\
        \ <fc=#666666>|</fc> \
        \<fc=#8BE9FD>%date%</fc>\
        \ "
   
    -- General Behavior
    ---
    -- Send to bottom of window stack on start?
    , lowerOnStart = True
    -- Start with window unmapped (hidden)?
    , hideOnStart = False
    -- Show on all desktops?
    , allDesktops = True
    -- Behave as a docked application? Set to False in a tiling window manager.
    , overrideRedirect = False
    -- Choose widest display by default in multi-monitor setup?
    , pickBroadest = False
    -- Fix window status? Set to True to make hiding/revealing impossible.
    , persistent = True
   
    , commands =
        -- Time and date
        [ Run Date "%b %d %Y %H:%M" "date" 50
   
        -- Network up and down
        , Run Network "enp34s0" ["-t", "\xf0aa <rx>kb  \xf0ab <tx>kb"] 20
   
        -- CPU usage (%)
        , Run Cpu ["-t", "CPU <total>%", "-H", "50", "--high", "red"] 20
   
        -- RAM used (number and %)
        , Run Memory ["-t", "MEM <used>M used (<usedratio>%)"] 20
   
        -- Disk space free
        , Run DiskU [("/", "HDD <free> free")] [] 60
   
        -- Number of apt updates, from a custom script from $HOME/.local/bin
        , Run Com "count_upgradable_packages" [] "" 36000
   
        -- Kernel version, from a standard shell command 'uname -r'
        , Run Com "uname" ["-r"] "" 36000
   
        -- Workspaces, current layout, window title...
        -- The workspaces are 'clickable' in my configs.
        , Run UnsafeStdinReader
    ]
}
